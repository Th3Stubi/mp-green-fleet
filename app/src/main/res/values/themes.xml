<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Greenfleet" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/btn_color</item>
    </style>

    <style name="Theme.Greenfleet" parent="Base.Theme.Greenfleet" />

    <style name="Theme.Greenfleet.Headline">
        <item name="android:textSize">64sp</item>
    </style>

    <!--General padding for every screen. Is used in activity_main.xml-->
    <style name="Theme.Greenfleet.GeneralPadding" parent="Base.Theme.Greenfleet">
        <item name="android:padding">20dp</item>
    </style>

    <!--RadioButtons: used in fragment_report.xml-->
    <style name="Theme.Greenfleet.Radiobutton">
        <item name="android:textSize">20sp</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Report Card-->
    <style name="Theme.Greenfleet.StatsCard">
        <item name="android:background">@drawable/bg_rounded_card</item>
        <item name="android:radius">10dp</item>
    </style>

    <!--Report Card Heading-->
    <style name="Theme.Greenfleet.StatsCardHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/stats_card_heading_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Report Card Value-->
    <style name="Theme.Greenfleet.StatsCardValue">
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/stats_card_value_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Report Card Filter-->
    <style name="Theme.Greenfleet.StatsCardFilter">
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/stats_card_filter_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Greenfleet.SettingsSubHeadline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Greenfleet.SettingsText">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>