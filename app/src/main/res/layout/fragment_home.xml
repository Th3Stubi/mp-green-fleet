<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".HomeFragment">

        <ImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/profile_placeholder"
            android:contentDescription="@string/profilbild"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Willkommen, Olaf"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/iv_profile_picture"
            app:layout_constraintStart_toEndOf="@id/iv_profile_picture"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile_picture"
            />

        <TextView
            android:id="@+id/tv_available_vehicle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/verfuegbares_fahrzeug"
            android:textSize="32sp"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@id/iv_profile_picture"
            app:layout_constraintStart_toStartOf="@id/iv_profile_picture"
            />

        <ImageView
            android:id="@+id/iv_vehicle"
            android:layout_width="164dp"
            android:layout_height="128dp"
            android:src="@drawable/vehicle_placeholder"
            android:contentDescription="@string/fahrzeug"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tv_available_vehicle"
            app:layout_constraintStart_toStartOf="@id/iv_profile_picture"
            tools:srcCompat="@tools:sample/avatars"
            />

        <Button
            android:id="@+id/btn_chose_vehicle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/fahrzeug_waehlen"
            app:layout_constraintTop_toBottomOf="@id/iv_vehicle"
            app:layout_constraintStart_toStartOf="@id/iv_vehicle"
            app:layout_constraintEnd_toEndOf="@id/iv_vehicle"
            />

        <TextView
            android:id="@+id/tv_license_plate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="PO 1298F"
            android:textSize="40sp"
            app:layout_constraintStart_toEndOf="@id/iv_vehicle"
            app:layout_constraintTop_toTopOf="@id/iv_vehicle"
            />

        <TextView
            android:id="@+id/tv_vehicle_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BMW 318d"
            android:textSize="28sp"
            android:textColor="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/tv_license_plate"
            app:layout_constraintStart_toStartOf="@id/tv_license_plate"
            />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tracking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:gravity="center"
            android:text="@string/tracking_starten"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="@id/iv_profile_picture"
            app:layout_constraintTop_toBottomOf="@id/btn_chose_vehicle"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon="@drawable/ic_play"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconSize="64dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>